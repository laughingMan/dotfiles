#-------------------------------------------------------------
# ls after cd
#-------------------------------------------------------------
function cd() {
    builtin cd "$1"
    ls -pA
}


#-------------------------------------------------------------
# Makes help a fallback for man
#-------------------------------------------------------------
man () {
    /usr/bin/man $@ || (help $@ 2> /dev/null && help $@ | less)
}


