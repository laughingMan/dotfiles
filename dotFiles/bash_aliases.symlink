alias ba='atom ~/.bash_aliases'
alias ws='cd ~/workspace'
alias work='cd ~/workspace'
alias reload='source ~/.bash_profile && source ~/.bash_aliases'
alias restart='sudo shutdown -r now'
alias dot='~/.dotfiles/bin/dot'


