#-------------------------------------------------------------
alias cheat='head -n 53 ~/.bash_aliases'
alias sub='/Applications/Atom.app/Contents/Resources/app/atom.sh'
alias subl='/Applications/Atom.app/Contents/Resources/app/atom.sh'


